<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
    <h2 class="title">Start a New Blog Post </h2><hr>

    <form class="new-post-form">

        <div>
            <label for="post-title">Title:</label>
            <input type="text" class="input" id="post-title" name="post-title" placeholder="Enter the title of your blog here" />
        </div>

        <div>
            <label for="post-content">Content:</label>
            <input class="textarea is-large" id="post-content" name="post-content" placeholder="Enter the content of your blog here"  />
        </div>

        <button class="button is-primary is-pulled-right" type="submit">CREATE POST</button>
    </form>
</section>
