<article>
    <a href="/dashboard" class="is-pulled-right"> &larr; Back to dashboard</a>
    <h2 class="title mt-5"> Edit post </h2><hr>

    <form class="edit-post-form">

        <div>
            <label for="post-title">Post title:</label>
            <input type="text" class="input" name="post-title" value="{{post.title}}" />
        </div>

        <div>
            <label for="post-content">Post content:</label>
            <input type="text" class="textarea" name="post-content" value="{{post.post_content}}" />
        </div>

        <div class="is-pulled-right">
            created by you on {{format_date post.created_at}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>

        <button class="button is-success" type="submit">SAVE POST</button>
        <button class="button is-danger delete-post-btn" type="button">DELETE POST</button></a>
    </form>
</article>

{{> comments post.comments}}

<script src = "/javascript/edit-post.js"></script>
<script src = "/javascript/delete-post.js"></script>
<script src = "/javascript/comment.js"></script>

